{
  "name": "env-run",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/env-run/src",
  "projectType": "library",
  "tags": ["scope:env-run", "type:lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "tsConfig": "{projectRoot}/tsconfig.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.ts",
          "{projectRoot}/**/*.js",
          "{projectRoot}/**/*.cjs",
          "{projectRoot}/**/*.mjs",
          "{projectRoot}/**/*.json"
        ]
      }
    },
    "test-unit": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "coverage": true
      }
    },
    "test-coverage": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "coverage": true
      }
    }
  }
}
