{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/src/main.ts",
      "cwd": "${workspaceFolder}/apps/api",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Webapp",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/webapp/node_modules/.bin/nuxt",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/webapp",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Marketing",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/marketing/node_modules/.bin/nuxt",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/marketing",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug env-run",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/env-run/dist/src/index.js",
      "args": ["--debug", "--env=dev-docker", "echo", "hello"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/packages/env-run/dist/src/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Debug env-run test-unit",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["nx", "run", "env-run:test-unit", "--", "--run"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/packages/env-run/dist/src/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
