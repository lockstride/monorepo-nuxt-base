{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": ["scope:api", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "dependsOn": ["prisma:build"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "{workspaceRoot}/dist/apps/api",
        "main": "{projectRoot}/src/main.ts",
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "assets": ["{projectRoot}/src/assets"],
        "webpackConfig": "{projectRoot}/webpack.config.cjs",
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": "inspect"
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve:production": {
      "continuous": true,
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build:production",
        "watch": false
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["prisma:db:setup", "prisma:build"],
      "options": {
        "command": "env-run --env=dev-host -- pnpm exec webpack-cli --config apps/api/webpack.config.cjs --watch",
        "cwd": "{workspaceRoot}",
        "env": {
          "NX_SERVE": "true"
        }
      }
    },
    "_test-unit": {
      "executor": "@nx/vitest:test",
      "options": {
        "config": "{projectRoot}/vitest.config.ts"
      }
    },
    "test-unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "env-run --env=dev-host -- nx run api:_test-unit"
      }
    },
    "test-coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "env-run --env=dev-host -- nx run api:_test-unit --coverage"
      }
    },
    "_test-e2e": {
      "executor": "@nx/vitest:test",
      "dependsOn": ["setup:e2e-docker"],
      "options": {
        "config": "{projectRoot}/vitest.config.e2e.ts"
      }
    },
    "test-e2e": {
      "executor": "nx:run-commands",
      "inputs": ["default", "ci"],
      "options": {
        "command": "env-run --env=e2e-docker -- nx run api:_test-e2e && nx run api:teardown:e2e-docker"
      }
    },
    "setup:e2e-docker": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infra",
        "command": "env-run --env=e2e-docker -- docker compose -f compose.e2e-api.yml up --build --wait"
      }
    },
    "teardown:e2e-docker": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "infra",
        "command": "env-run --env=e2e-docker -- docker compose -f compose.e2e-api.yml down -v"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.ts",
          "{projectRoot}/**/*.js",
          "{projectRoot}/**/*.cjs",
          "{projectRoot}/**/*.mjs",
          "{projectRoot}/**/*.json"
        ]
      }
    }
  }
}
